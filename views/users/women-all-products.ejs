<!-- Product -->
<div class="bg0 m-t-23 p-b-140">
    <div class="container">
        <div class="flex-w flex-sb-m p-b-52">
            
            <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                <a href="/allProducts" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">All Products</a>
                <a href="/women-products" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" >Women</a>
                <a href="/men-products" class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5">Men</a>            
            </div>
            <div class="flex-w flex-c-m m-tb-10">
                <div
                    class="flex-c-m stext-106 cl6 size-104 bor4 pointer hov-btn3 trans-04 m-r-8 m-tb-4 js-show-filter">
                    Filter & Sort
                </div>

                <div
                    class="flex-c-m stext-106 cl6 size-105 bor4 pointer hov-btn3 trans-04 m-tb-4 js-show-search">
                    <i class="icon-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-search"></i>
                    <i class="icon-close-search cl2 m-r-6 fs-15 trans-04 zmdi zmdi-close dis-none"></i>
                    Search
                </div>
            </div>

            <!-- Search product -->
            <div class="dis-none panel-search w-full p-t-10 p-b-15">
                <div class="bor8 dis-flex p-l-15">
                    <input id="searchInput" class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product" placeholder="Search">
                    <button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04" id="searchBtn">
                        <i class="zmdi zmdi-search"></i> Search
                    </button>
                </div>
            </div>
            <!-- Filter -->
            <div class="dis-none panel-filter w-full p-t-10">
                <div
                    class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">
                    <div class="filter-col1 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">
                            Sort By
                        </div>
                        <ul>

                            <li class="p-b-6">
                                <button id="sortAZ" class="filter-link stext-106 trans-04">A - Z</button>
                            </li>
                            <li class="p-b-6">
                                <button id="sortZA" class="filter-link stext-106 trans-04">Z - A</button>
                            </li>
                        </ul>
                    </div>

                    <div class="filter-col2 p-r-15 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">Price</div>
                        <ul>
                            <li class="p-b-6">
                                <button id="sortLowToHigh" class="filter-link stext-106 trans-04">Price: Low to High</button>
                            </li>
                            <li class="p-b-6">
                                <button id="sortHighToLow" class="filter-link stext-106 trans-04">Price: High to Low</button>
                            </li>
                        </ul>
                    </div>

                    <div class="filter-col4 p-b-27">
                        <div class="mtext-102 cl2 p-b-15">Categories</div>
                        <div class="flex-w p-t-4 m-r--5">
                            <% allCategories.forEach(category => { %>
                            <button
                                class="flex-c-m stext-107 cl6 size-301 bor7 p-lr-15 hov-tag1 trans-04 m-r-5 m-b-5 categoryFilterBtn"
                                data-category="<%= category.category %>" data-gender="<%= category.gender %>">
                                <%= category.category %> in <%= category.gender %>
                            </button>
                            <% }) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row isotope-grid" id="productContainer">
            <% variants.forEach(variant => { %>
            <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item <%= variant.productId.categoryId.gender %>">
                <div class="block2">
                    <div class="block2-pic hov-img0">
                        <a href="/productDetail?variantId=<%= variant._id %>">
                            <img src="images/<%= variant.image[0] %>" alt="IMG-PRODUCT" class="product-image">
                        </a>
        
                        <!-- Calculate and Display Offer Badge with Correct Discount Percentage -->
                        <% if (variant.productOfferPrice || variant.categoryOfferPrice) { %>
                            <% 
                                let discountPrice;
                                let discountPercentage;
        
                                // Determine the correct offer price to use
                                if (!variant.productOfferPrice) {
                                    // Only category offer exists
                                    discountPrice = variant.categoryOfferPrice;
                                    discountPercentage = Math.round(((variant.price - discountPrice) / variant.price) * 100);
                                } else if (!variant.categoryOfferPrice) {
                                    // Only product offer exists
                                    discountPrice = variant.productOfferPrice;
                                    discountPercentage = Math.round(((variant.price - discountPrice) / variant.price) * 100);
                                } else {
                                    // Both exist, choose the lower offer price
                                    discountPrice = Math.min(variant.productOfferPrice, variant.categoryOfferPrice);
                                    discountPercentage = Math.round(((variant.price - discountPrice) / variant.price) * 100);
                                }
                            %>
                            <% if (discountPercentage > 0) { %>
                                <span class="badge badge-danger"><%= discountPercentage %>% </span>
                            <% } %>
                        <% } %>
                    </div>
        
                    <div class="block2-txt flex-w flex-t p-t-14">
                        <div class="block2-txt-child1 flex-col-l">
                            <a href="/productDetail?variantId=<%= variant._id %>" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6 product-name">
                                <%= variant.productId.name %>
                            </a>
        
                            <!-- Price Section -->
                            <% if (!variant.productOfferPrice && !variant.categoryOfferPrice) { %>
                                <span class="stext-105 cl3 original-price">₹ <%= variant.price %></span>
                            <% } else if (!variant.productOfferPrice) { %>
                                <span class="stext-105 cl3 discount-price">₹ <%= variant.categoryOfferPrice %></span>
                                <span class="original-price strike-through off-class">₹ <%= variant.price %></span>
                            <% } else if (!variant.categoryOfferPrice) { %>
                                <span class="stext-105 cl3 discount-price">₹ <%= variant.productOfferPrice %></span>
                                <span class="original-price strike-through off-class">₹ <%= variant.price %></span>
                            <% } else { %>
                                <% 
                                    let finalPrice = Math.min(variant.productOfferPrice, variant.categoryOfferPrice);
                                %>
                                <span class="stext-105 cl3 discount-price">₹ <%= finalPrice %></span>
                                <span class="original-price strike-through off-class">₹ <%= variant.price %></span>
                            <% } %>
                        </div>
        
                        <div class="block2-txt-child2 flex-r p-t-3">
                            <!-- Wishlist Button -->
                            <!-- <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                <img class="icon-heart1 dis-block trans-04" src="images/icons/icon-heart-01.png" alt="ICON">
                                <img class="icon-heart2 dis-block trans-04 ab-t-l" src="images/icons/icon-heart-02.png" alt="ICON">
                            </a> -->
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        
        


        <!-- Load more -->
        <!-- <div class="flex-c-m flex-w w-full p-t-45">
            <a href="#"
                class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                Load More
            </a>
        </div> -->
    </div>
</div>

<%- include("../partials/userpartials/footer.ejs") %>


<script>
    document.addEventListener("DOMContentLoaded", () => {
        let searchInput = document.getElementById('searchInput');
        let sortAZ = document.getElementById('sortAZ');
        let sortZA = document.getElementById('sortZA');
        let sortLowToHigh = document.getElementById('sortLowToHigh');
        let sortHighToLow = document.getElementById('sortHighToLow');
        let categoryFilterBtns = document.querySelectorAll('.categoryFilterBtn');
    
        let currentSort = '';
        let currentSearch = '';
        let currentCategory = '';
        let currentGender = '';
    
        const reloadProducts = () => {
            let filter = currentCategory && currentGender ? `${currentCategory} ${currentGender}` : 'Women *';
            let url = `/products?sort=${currentSort}&search=${currentSearch}&filter=${filter}`;
    
            const productContainer = document.getElementById('productContainer');
            productContainer.classList.add('fade-out'); 
    
            fetch(url)
                .then(response => response.json())
                .then(data => {
                    productContainer.innerHTML = ''; 
    
                    data.variants.forEach(variant => {
                        let discountPrice = variant.categoryOfferPrice || variant.productOfferPrice;
                        let discountPercentage = discountPrice ? Math.round(((variant.price - discountPrice) / variant.price) * 100) : 0;
    
                        let productHTML = `
                            <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item ${variant.productId.categoryId.gender}">
                                <div class="block2">
                                    <div class="block2-pic hov-img0">
                                        <a href="/productDetail?variantId=${variant._id}">
                                            <img src="images/${variant.image[0]}" alt="IMG-PRODUCT" class="product-image">
                                        </a>
                                        ${discountPercentage > 0 ? `<span class="badge badge-danger">${discountPercentage}% OFF</span>` : ''}
                                    </div>
                                    <div class="block2-txt flex-w flex-t p-t-14">
                                        <div class="block2-txt-child1 flex-col-l">
                                            <a href="/productDetail?variantId=${variant._id}" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6 product-name">
                                                ${variant.productId.name}
                                            </a>
                                            ${!variant.productOfferPrice && !variant.categoryOfferPrice 
                                                ? `<span class="stext-105 cl3 original-price">₹ ${variant.price}</span>`
                                                : `<span class="stext-105 cl3 discount-price">₹ ${discountPrice}</span>
                                                   <span class="original-price strike-through">₹ ${variant.price}</span>`
                                            }
                                        </div>
                                        <div class="block2-txt-child2 flex-r p-t-3">
                                            <a href="#" class="btn-addwish-b2 dis-block pos-relative js-addwish-b2">
                                                <img class="icon-heart1 dis-block trans-04" src="images/icons/icon-heart-01.png" alt="ICON">
                                                <img class="icon-heart2 dis-block trans-04 ab-t-l" src="images/icons/icon-heart-02.png" alt="ICON">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;
                        productContainer.insertAdjacentHTML('beforeend', productHTML);
                    });
    
                        productContainer.classList.remove('fade-out');
                        productContainer.classList.add('fade-in');
    
                    setTimeout(() => {
                        productContainer.classList.remove('fade-in');
                    }, 500); 
                })
                .catch(error => {
                    console.error('Error fetching products:', error);
                });
        };
    
        // search
        document.getElementById('searchBtn').addEventListener('click', () => {
            currentSearch = searchInput.value;
            reloadProducts();
        });
    
        // sort 
        sortAZ.addEventListener('click', () => {
            currentSort = 'nameAZ';
            reloadProducts();
        });
    
        sortZA.addEventListener('click', () => {
            currentSort = 'nameZA';
            reloadProducts();
        });
    
        sortLowToHigh.addEventListener('click', () => {
            currentSort = 'lowToHigh';
            reloadProducts();
        });
    
        sortHighToLow.addEventListener('click', () => {
            currentSort = 'highToLow';
            reloadProducts();
        });
    
        // filters
        categoryFilterBtns.forEach(button => {
            button.addEventListener('click', (e) => {
                currentCategory = e.target.getAttribute('data-category');
                currentGender = e.target.getAttribute('data-gender');
                reloadProducts();
            });
        });
    });
</script>