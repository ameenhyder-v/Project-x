<%- include("../partials/userpartials/header.ejs") %>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

	<!-- breadcrumb -->
	<div class="container">
		<div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
			<a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
				Home
				<i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
			</a>

			<span class="stext-109 cl4">
				Shoping Cart
			</span>
		</div>
	</div>
		

	<!-- Shoping Cart -->
	<!-- Shopping Cart -->
<form class="bg0 p-t-75 p-b-85">
    <div class="container">
        <div class="row">
            <% if (cartData && cartData.cartItems && cartData.cartItems.length > 0) { %>
                <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <div class="wrap-table-shopping-cart">
                            <table class="table-shopping-cart">
                                <tr class="table_head">
                                    <th class="column-1">Product</th>
                                    <th class="column-2">Name</th>
                                    <th class="column-3">Size</th>
                                    <th class="column-4">Price</th>
                                    <th class="column-5">Quantity</th>
                                    <th class="column-6">Total</th>
                                </tr>

                                <% cartData.cartItems.forEach((item) => { %>
                                    <% const cart = item %>
                                    <% const size = item.size.trim() %>
                                    <% const variant = item.variantId %>
                                    <% const product = item.variantId.productId %>
                                    <% let filteredData = variant.stock.filter(stockItem => stockItem.size == size) %>
                                    <tr class="table_row">
                                        <td class="column-1">
                                            <div class="how-itemcart1" onclick="removeItem(event, '<%= variant._id %>', '<%= cart.size.trim() %>')">
                                                <img src="/images/<%= variant.image[0] %>" alt="IMG">
                                                <button>Remove</button>
                                            </div>
                                        </td>
                                        <td class="column-2"><a href="/productDetail?variantId=<%= variant._id %>"><%= product.name %></a></td>
                                        <td class="column-3"><%= cart.size.trim() %></td>
                                        <td class="column-4">₹<%= variant.price %></td>
                                        <td class="column-5">
                                            <% if (filteredData[0].quantity == 0) { %>
                                                <p style="color: red;" id="noStock">Out of stock</p>
                                            <% } else { %>
                                                <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                                    <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m" onclick="decreaseQuantity('<%= variant._id %>', '<%= size %>', '<%= item._id %>')">
                                                        <i class="fs-16 zmdi zmdi-minus"></i>
                                                    </div>
                                                    <input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product1" id="quantity<%= item._id %>" value="<%= cart.quantity %>">
                                                    <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m" onclick="addQuantity('<%= variant._id %>', '<%= size %>', '<%= item._id %>')">
                                                        <i class="fs-16 zmdi zmdi-plus"></i>
                                                    </div>
                                                </div>
                                            <% } %>
                                        </td>
                                        <td class="column-6" id="totalPrice<%= item._id %>">
                                            <% if (filteredData[0].quantity == 0) { %>
                                                ₹0
                                            <% } else { %>
                                                ₹<%= variant.price * cart.quantity %>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                        <h4 class="mtext-109 cl2 p-b-30">
                            Cart Totals
                        </h4>

                        <div class="flex-w flex-t bor12 p-b-13">
                            <div class="size-208">
                                <span class="stext-110 cl2">
                                    Subtotal:
                                </span>
                            </div>
                            <div class="size-209">
                                <span class="mtext-110 cl2" id="subTotal">
                                    ₹<%= subTotalAmount %>
                                </span>
                            </div>
                        </div>

                        <div class="flex-w flex-t p-t-27 p-b-33">
                            <div class="size-208">
                                <span class="mtext-101 cl2">
                                    Total:
                                </span>
                            </div>
                            <div class="size-209 p-t-1">
                                <span class="mtext-110 cl2" id="totalAmount">
                                    ₹<%= subTotalAmount %>
                                </span>
                            </div>
                        </div>
						<!-- Proceed to Checkout Button -->
						<a href="/checkout" class="proceed-button">
							<button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" type="button">
								Proceed to Checkout
							</button>
						</a>

						<!-- Error Message -->
						<p class="error-message" style="color: red; display: none;">
							Some items in your cart are out of stock. Please remove them before proceeding to checkout.
						</p>

                    </div>
                </div>
            <% } else { %>
                <div class="col-lg-12 m-lr-auto m-b-50">
                    <div class="bor10 p-lr-40 p-t-30 p-b-40 m-lr-0-xl p-lr-15-sm">
                        <h4 class="mtext-109 cl2 p-b-30">
                            Your Cart is Empty
                        </h4>
                        <p class="stext-111 cl2">
                            It looks like you haven't added anything to your cart yet. Continue shopping to find great deals!
                        </p>
                        <a href="/allProducts">
                            <button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer" type="button">
                                Continue Shopping
                            </button>
                        </a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</form>


<script>
	function addQuantity (variantId, size,id){

		let totalPrice = document.getElementById(`totalPrice${id}`);
		let quantity = document.getElementById(`quantity${id}`);
		let subTotal = document.getElementById("subTotal");
		let totalAmount = document.getElementById("totalAmount")


		 const formData = new FormData()
		formData.append("variantId", variantId);
		formData.append("size", size);

		fetch("/add-quantity", {
			method: "PATCH",
			body: formData
		}).then(response => response.json())
		.then(data => {
			if (data.message) {
				Swal.fire({
					icon: 'warning',
					title: 'warning',
					text: data.message
				});

				const count = quantity.value;
				if (count == 1){
					quantity.value = 1
				}
			} else if (data.success) {
				console.log(typeof data.quantity);

				if (totalPrice) {
					totalPrice.textContent = `₹${data.totalPrice}`;
				} else {
					console.warn('Element with ID `totalPrice' + id + '` not found');
				}

				if (quantity) {
					quantity.value = data.quantity; // Use value for input elements
				} else {
					console.warn('Element with ID `quantity' + id + '` not found');
				}

				if (subTotal) {
					subTotal.textContent = `₹${data.subTotalAmount}`;
				} else {
					console.warn('Element with ID "subTotal" not found');
				}

				if (totalAmount) {
					totalAmount.textContent = `₹${data.subTotalAmount}`;
				} else {
					console.warn('Element with ID "totalAmount" not found');
				}
			}
				}).catch(Error => {
					console.log(Error)
				})
			}


	function decreaseQuantity (variantId, size,id){
		let totPrice = document.getElementById(`totalPrice${id}`);
		let quantity = document.getElementById(`quantity${id}`);
		let subTotal = document.getElementById("subTotal");
		let totalAmount = document.getElementById("totalAmount")


		 const formData = new FormData()
		formData.append("variantId", variantId);
		formData.append("size", size);

		fetch("/delete-quantity", {
			method: "PATCH",
			body: formData
		}).then(response => response.json())
		.then(data => {
			if (data.message) {
				Swal.fire({
					icon: 'warning',
					title: 'warning',
					text: data.message
				});

				quantity.value = 1
			} else if (data.success) {
				console.log(data)
				totPrice.textContent = `₹${data.totalPrice}`
				quantity.value = data.quantity
				subTotal.textContent = `₹${data.subTotalAmount}`
				totalAmount.textContent = `₹${data.subTotalAmount}`
			}
		})
	}

	<!-- //! REMOVE ITEM FROME THE CART -->
	function removeItem(event, variantId, size) {
		event.preventDefault();
	
		// Show confirmation dialog using SweetAlert
		Swal.fire({
			title: 'Are you sure?',
			text: "You won't be able to revert this!",
			icon: 'warning',
			showCancelButton: true,
			confirmButtonColor: '#3085d6',
			cancelButtonColor: '#d33',
			confirmButtonText: 'Yes, remove it!'
		}).then((result) => {
			if (result.isConfirmed) {
				const data = {
					variantId: variantId,
					size: size
				};
	
				fetch('/remove-item', {
					method: 'PATCH',
					headers: {
						'Content-Type': 'application/json',
					},
					body: JSON.stringify(data),
				})
				.then(response => response.json())
				.then(data => {
					if (data.success) {
						Swal.fire(
							'Removed!',
							'The item has been removed from your cart.',
							'success'
						).then(() => {
							window.location.reload();
						});
					} else {
						Swal.fire(
							'Failed!',
							`Failed to remove item: ${data.error}`,
							'error'
						);
					}
				})
				.catch(error => {
					Swal.fire(
						'Error!',
						`An error occurred: ${error.message}`,
						'error'
					);
				});
			}
		});
	}

	function checkOutOfStockItems() {
		const noStockElements = document.querySelectorAll('#noStock');
		const proceedButton = document.querySelector('.proceed-button');
		const errorMessage = document.querySelector('.error-message');
	
		let hasOutOfStock = false;
	
		noStockElements.forEach((element) => {
			if (element) {
				hasOutOfStock = true;
			}
		});
	
		if (hasOutOfStock) {
			proceedButton.style.display = 'none';
			errorMessage.style.display = 'block';
		} else {
			proceedButton.style.display = 'block';
			errorMessage.style.display = 'none';
		}
	}
	
	// Call this function when the cart page is loaded
	window.onload = checkOutOfStockItems;
	
</script>