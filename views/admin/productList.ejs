<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

<script>

function categoryFinding(preSelectedGender, preSelectedCategory) {
    const selectedGender = preSelectedGender || document.getElementById('genderModal').value;
    if (!selectedGender) {
        alert('Please select a gender');
        return Promise.resolve();
    }
    return fetch(`/admin/check-category?gender=${selectedGender}`)
        .then(response => response.json())
        .then(data => {
            const selectElement = document.getElementById('categoryModal');
            selectElement.innerHTML = '<option disabled selected hidden>Choose…</option>';
            data.forEach(item => {
                const option = document.createElement('option');
                option.textContent = item.category;
                option.value = item.category;
                if (preSelectedCategory && preSelectedCategory === item.category) option.selected = true;
                selectElement.appendChild(option);
            });
        })
        .catch(error => {
            console.error('Error loading categories:', error);
        });
}
    
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.editProdLink').forEach(function(link) {
            link.addEventListener('click', function(event) {
                event.preventDefault();
                const productId = this.getAttribute('data-product-id');
                fetch(`/admin/edit-this-product?productId=${productId}`)
                    .then(response => response.json())
                    .then(async function(data) {
                        const product = data.data;
                        if (!product) return;
                        document.getElementById('product_Id').value = product._id;
                        document.getElementById('productNameModal').value = product.name || '';
                        document.getElementById('descriptionModal').value = product.description || '';
                        document.getElementById('brand_nameModal').value = product.brand || '';
                        document.getElementById('materialModal').value = product.material || '';
                        document.getElementById('tagsModal').value = product.tags || '';
                        document.getElementById('genderModal').value = product.categoryId ? product.categoryId.gender : '';
                        await categoryFinding(product.categoryId ? product.categoryId.gender : null, product.categoryId ? product.categoryId.category : null);
                        var myModal = new bootstrap.Modal(document.getElementById('editProductModal'));
                        myModal.show();
                    })
                    .catch(error => {
                        console.error('Error fetching product data:', error);
                        Swal.fire({ title: 'Error', text: 'Could not load product.', icon: 'error' });
                    });
            });
        });
    });
    

    async function updateProduct(event) {
        event.preventDefault();
        
        try {
            const editForm = document.getElementById("edit-product-form");
            const formData = new FormData(editForm);
    
            const params = new URLSearchParams();
            for (const [key, value] of formData.entries()) {
                params.append(key, value);
            }
    
            const productId = formData.get('productId'); 
    
            const response = await fetch(`/admin/update-product`, {
                method: "PATCH",
                body: params,
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                }
            });
    
            const data = await response.json();
    
            if (response.ok) {
                Swal.fire({
                    title: 'Success!',
                    text: data.message,
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.reload();
                    }
                });
            } else {
                Swal.fire({
                    title: 'Error!',
                    text: data.message,
                    icon: 'error',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.reload();
                    }
                });
            }
        } catch (error) {
            Swal.fire({
                title: 'Error!',
                text: 'An unexpected error occurred.',
                icon: 'error',
                confirmButtonText: 'OK'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.reload();
                }
            });
         }
    }

    async function deleteProduct(productId) {
        const result = await Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        });
    
        if (result.isConfirmed) {
            try {
                const response = await fetch(`/admin/delete-product?productId=${productId}`, {
                    method: "DELETE",
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    }
                });
        
                const data = await response.json();
        
                if (response.ok) {
                    Swal.fire({
                        title: 'Success!',
                        text: data.message,
                        icon: 'success',
                        confirmButtonText: 'OK'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.reload();
                        }
                    });
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: data.message,
                        icon: 'error',
                        confirmButtonText: 'OK'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.reload();
                        }
                    });
                }
            } catch (error) {
                Swal.fire({
                    title: 'Error!',
                    text: 'An unexpected error occurred.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.reload();
                    }
                });
            }
        }
    }
    
    


    function blockProduct(productId, buttonEl) {
        var btn = buttonEl || document.getElementById('block-btn-' + productId);
        if (!btn) return;
        var originalHtml = btn.innerHTML;
        btn.disabled = true;
        btn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status"></span>';

        axios.post('/admin/block-product?id=' + productId)
            .then(function(response) {
                if (response.data.success) {
                    if (btn.classList.contains('btn-outline-danger')) {
                        btn.classList.remove('btn-outline-danger');
                        btn.classList.add('btn-success');
                        btn.innerHTML = '<i class="material-icons md-check_circle" style="font-size: 18px; vertical-align: middle;"></i> Unblock';
                    } else {
                        btn.classList.remove('btn-success');
                        btn.classList.add('btn-outline-danger');
                        btn.innerHTML = '<i class="material-icons md-block" style="font-size: 18px; vertical-align: middle;"></i> Block';
                    }
                } else {
                    btn.disabled = false;
                    btn.innerHTML = originalHtml;
                    Swal.fire({ title: 'Error', text: response.data.message || 'An error occurred', icon: 'error' });
                }
            })
            .catch(function(error) {
                btn.disabled = false;
                btn.innerHTML = originalHtml;
                Swal.fire({ title: 'Error', text: 'Could not update product status.', icon: 'error' });
            });
    }
</script>