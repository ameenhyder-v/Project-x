    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-nav">
                <button class="btn btn-icon btn-mobile me-auto" data-trigger="#offcanvas_aside"><i class="material-icons md-apps"></i></button>
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link btn-icon darkmode" href="#"> <i class="material-icons md-nights_stay"></i> </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="requestfullscreen nav-link btn-icon"><i class="material-icons md-cast"></i></a>
                    </li>
                </ul>
            </div>
        </header>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Products List</h2>
                    <p class="text-muted mb-0"><%= allProducts.length %> product(s) on this page</p>
                </div>
                <div>
                    <a href="/admin/addProduct" class="btn btn-primary btn-sm rounded"><i class="material-icons md-add"></i> Add Product</a>
                </div>
            </div>
            <div class="card mb-4">
                <header class="card-header bg-light border-bottom p-0">
                    <div class="row align-items-center g-0 py-2 px-3 mx-0">
                        <div class="col-lg-4 col-sm-4 col-8"><strong>Product</strong></div>
                        <div class="col-lg-2 col-sm-2 col-4"><strong>Brand</strong></div>
                        <div class="col-lg-2 col-sm-2 col-4"><strong>Category</strong></div>
                        <div class="col-lg-2 col-sm-2 col-4"><strong>Status</strong></div>
                        <div class="col-lg-1 col-sm-2 col-4"><strong>Variants</strong></div>
                        <div class="col-lg-2 col-sm-2 col-4 text-end"><strong>Actions</strong></div>
                    </div>
                </header>
                <div class="card-body p-0">
                    <% if (!allProducts || allProducts.length === 0) { %>
                        <div class="text-center py-5 px-3">
                            <i class="material-icons md-shopping_bag text-muted" style="font-size: 64px;"></i>
                            <p class="text-muted mt-3 mb-2">No products yet</p>
                            <a href="/admin/addProduct" class="btn btn-primary rounded">Add your first product</a>
                        </div>
                    <% } else { %>
                        <% allProducts.forEach((product, index) => { %>
                        <article class="itemlist border-bottom border-light">
                            <div class="row align-items-center g-0 py-3 px-3 mx-0 <%= index % 2 === 0 ? '' : 'bg-light' %>">
                                <div class="col-lg-4 col-sm-4 col-8 col-name">
                                    <div class="itemside d-flex align-items-center gap-3">
                                        <% if (product.thumbnailImage) { %>
                                        <div class="left flex-shrink-0">
                                            <img src="/images/<%= product.thumbnailImage %>" class="img-sm img-thumbnail rounded" alt="<%= product.name %>" style="width: 56px; height: 56px; object-fit: cover;" />
                                        </div>
                                        <% } else { %>
                                        <div class="left flex-shrink-0 bg-light rounded d-flex align-items-center justify-content-center" style="width: 56px; height: 56px;">
                                            <i class="material-icons md-image text-muted" style="font-size: 28px;"></i>
                                        </div>
                                        <% } %>
                                        <div class="info min-w-0">
                                            <h6 class="mb-0"><%= product.name %></h6>
                                            <% if (product.description && product.description.length) { %><p class="text-muted small mb-0 text-truncate" style="max-width: 220px;" title="<%= product.description %>"><%= product.description.length > 50 ? product.description.substring(0, 50) + '...' : product.description %></p><% } %>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-sm-2 col-4 col-price"><span ><%= product.brand || '—' %></span></div>
                                <div class="col-lg-2 col-sm-2 col-4 col-price"><span ><%= product.categoryId ? product.categoryId.category + ', ' + product.categoryId.gender : '—' %></span></div>
                                <div class="col-lg-2 col-sm-2 col-4 col-status">
                                    <% if (!product.isBlocked) { %>
                                        <button type="button" id="block-btn-<%= product._id %>" class="btn btn-sm btn-outline-danger rounded font-sm block-btn" data-id="<%= product._id %>" onclick="blockProduct('<%= product._id %>', this)">
                                            <i class="material-icons md-block" style="font-size: 18px; vertical-align: middle;"></i> Block
                                        </button>
                                    <% } else { %>
                                        <span class="badge bg-secondary me-1">Blocked</span>
                                        <button type="button" id="block-btn-<%= product._id %>" class="btn btn-sm btn-success rounded font-sm unblock-btn" data-id="<%= product._id %>" onclick="blockProduct('<%= product._id %>', this)">
                                            <i class="material-icons md-check_circle" style="font-size: 18px; vertical-align: middle;"></i> Unblock
                                        </button>
                                    <% } %>
                                </div>
                                <div class="col-lg-1 col-sm-2 col-4">
                                    <a href="/admin/load-variant?productId=<%= product._id %>" class="btn btn-sm font-sm rounded btn-outline-primary"><i class="material-icons md-edit"></i> Variants</a>
                                </div>
                                <div class="col-lg-2 col-sm-2 col-4 col-action text-end">
                                    <a href="#" class="btn btn-sm font-sm rounded btn-outline-secondary editProdLink" data-product-id="<%= product._id %>"><i class="material-icons md-edit"></i> Edit</a>
                                    <button type="button" class="btn btn-sm font-sm btn-outline-danger rounded" onclick="deleteProduct('<%= product._id %>')"><i class="material-icons md-delete_forever"></i> Delete</button>
                                </div>
                            </div>
                        </article>
                        <% }); %>
                    <% } %>
                </div>
            </div>
            <!-- card end// -->
            <!-- PAGINATION  -->
            <% if (totalPages > 1) { %>
            <div class="pagination-area mt-30 mb-50 d-flex align-items-center justify-content-between flex-wrap gap-2">
                <p class="text-muted small mb-0">Page <strong><%= currentPage %></strong> of <strong><%= totalPages %></strong></p>
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-0 flex-wrap">
                        <% if (currentPage > 1) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= currentPage - 1 %>"><i class="material-icons md-chevron_left"></i> Previous</a>
                        </li>
                        <% } %>
                        <% for (let i = 1; i <= totalPages; i++) { %>
                        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                        </li>
                        <% } %>
                        <% if (currentPage < totalPages) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next <i class="material-icons md-chevron_right"></i></a>
                        </li>
                        <% } %>
                    </ul>
                </nav>
            </div>
            <% } %>
        </section>


        <!-- modal part -->
        <div class="modal fade dark" id="editProductModal" tabindex="-1" aria-labelledby="editProductModalLabel" aria-hidden="true">
            <div class="modal-dialog" style="max-width: 600px;">
                <div class="modal-content" style="background-color: rgb(68, 68, 68);">
                    <div class="modal-header">
                        <h5 class="modal-title" id="editProductModalLabel">Edit Product</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" style="background-color: rgb(68, 68, 68);">
                        <form id="edit-product-form">
                            <input type="text" name="productId" class="d-none" id="product_Id" />
                            <div class="mb-4">
                                <label for="productNameModal" class="form-label">Product Name</label>
                                <input type="text" placeholder="Type here" class="form-control" id="productNameModal" required name="productName"/>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Full description</label>
                                <textarea placeholder="Type here" class="form-control" rows="4" name="description" required id="descriptionModal"></textarea>
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Brand Name</label>
                                <input type="text" placeholder="Brand Name" class="form-control" id="brand_nameModal" name="brandName">
                            </div>
                            <div class="mb-4">
                                <label class="form-label">Material</label>
                                <input type="text" placeholder="Material" class="form-control" id="materialModal" name="material">
                            </div>
                            <div class="mb-4">
                                <label class="text-danger small">Make sure the category and subcategory are correct.</label>
                            </div>
                            <div class="row gx-2">
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label">Gender</label>
                                    <select class="form-select" onchange="categoryFinding()" name="gender" id="genderModal">
                                        <option value="" disabled selected hidden>Choose…</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                                <div class="col-sm-6 mb-3">
                                    <label class="form-label">Category</label>
                                    <select class="form-select" name="category" id="categoryModal">
                                        <option disabled selected hidden>Choose…</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label for="tagsModal" class="form-label">Tags</label>
                                <input type="text" class="form-control" placeholder="New/Arrival" name="tags" id="tagsModal">
                            </div>
                            <div class="d-flex gap-2 justify-content-end mt-4">
                                <button class="btn btn-light rounded font-sm" type="button" data-bs-dismiss="modal">Cancel</button>
                                <button class="btn btn-primary rounded font-sm" type="button" onclick="updateProduct(event)">Update Product</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>



