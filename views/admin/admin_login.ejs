    <section class="content-main mt-80 mb-80">
        <div class="card mx-auto card-login">
            <div class="card-body">
                <h4 class="card-title mb-4">Sign in</h4>
                <form method="post">
                    <% if (typeof message !== "undefined") { %>
                        <p style="color: red;"> <%= message %> </p>
                    <% } %>
                    <div class="mb-3">
                        <input class="form-control" placeholder="Username or email" name="username" type="text" value="admin@557.com" />
                    </div>
                    <!-- form-group// -->
                    <div class="mb-3">
                        <input class="form-control" placeholder="Password" name="password" type="password" value="Admin007" />
                    </div>
                    <!-- form-group// -->
                    <div class="mb-3">
                        <a href="#" class="float-end font-sm text-muted">Forgot password?</a>
                    </div>
                    <!-- form-group form-check .// -->
                    <div class="mb-4">
                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    </div>
                    <!-- form-group// -->
                </form>
                
            </div>
        </div>
    </section>

